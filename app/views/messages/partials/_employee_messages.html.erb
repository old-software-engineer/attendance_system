<% get_conversation_between(get_latest_admin,current_employee).each do  |msg| %>
	<%= get_email_using_id(msg.sender.id) %>: <%= msg.content %><br>
<% end %>

<%= form_with(model: @message, method: "post") do |form| %>
<%= form.text_field :content %>
<%= form.hidden_field :recipient_id, value: @recipient.id %>
<%= form.submit t("generic.Send_Message") %>
<% end %>